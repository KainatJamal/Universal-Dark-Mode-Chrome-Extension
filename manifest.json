{
  "manifest_version": 3,
  "name": "Universal Dark Mode & Accessibility Extension",
  "version": "1.0",
  "description": "A Chrome extension that provides universal dark mode and accessibility features.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*/*"  
  ]
}
